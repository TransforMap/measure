{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "project": { "type": "string" },
    "config": {
      "type": "object",
      "properties": {
        "social-media": {
          "type": "object",
          "properties": {
            "twitter": {
              "type": "object",
              "properties": {
                "entities": {
                  "type": "array"
                }
              },
              "required": ["entities"]
            },
            "facebook": {
              "type": "object",
              "properties": {
                "pages": {
                  "type": "array"
                }
              },
              "required": ["pages"]
            }
          }
        },
        "code-hosting": {
          "type": "object",
          "properties": {
            "github": {
              "type": "object",
              "properties": {
                "repositories": {
                  "type": "array"
                }
              },
              "required": ["repositories"]
            }
          }
        },
        "code-packaging": {
          "type": "object",
          "properties": {
            "npm": {
              "type": "object",
              "properties": {
                "packages": {
                  "type": "array"
                }
              },
              "required": ["packages"]
            },
            "pypi": {
              "type": "object",
              "properties": {
                "packages": {
                  "type": "array"
                }
              },
              "required": ["packages"]
            }
          }
        }
      }
    }
  },
  "required": ["project", "config"]
}

